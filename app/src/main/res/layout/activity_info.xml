<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/linearLayout_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Достопримечательность"
            android:textColor="#ED4146"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#294A7F"
            android:gravity="center"
            android:textSize="20sp"
            android:hint="Город"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/tv_foto"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="10sp"
         />

    <LinearLayout
        android:id="@+id/linearLayout_site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/name_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#294A7F"
            android:text="Сайт:"
            android:layout_marginEnd="20sp"/>

        <TextView
            android:id="@+id/tv_site"
            android:layout_marginLeft="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:hint="Сайт"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_work_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10sp">

    <TextView
        android:id="@+id/name_work_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#294A7F"
        android:text="Время роботи:"
        android:layout_marginEnd="20sp"/>

        <TextView
            android:id="@+id/tv_work_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:hint="Время роботи"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        >
    <TextView
        android:id="@+id/tv_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="10sp"
        android:hint="Описание" />
    </ScrollView>

</LinearLayout>